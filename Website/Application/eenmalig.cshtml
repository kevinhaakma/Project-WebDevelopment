        db.Execute(query,RitID,tijd,Ophaaladres,BestemmingsAdres,klant,personen,sw,kenteken,chauffeur, ReformatDate(datum), geannuleerd,betaalwijze,exclusief,percentage,inclusief,bijzonderheden);
