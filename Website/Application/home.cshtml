@{
	var db = Database.Open("klantgegevens");
	var gegevens = db.Query("SELECT * from Rittenkaart");
}
<!DOCTYPE html>
<html>
<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/css/materialize.min.css" media="screen,projection" />
    <link type="text/css" rel="stylesheet" href="~/css/stylesheet.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Menger | Agenda</title>
    <link rel="shortcut icon" href="~/img/Menger-Favicon.png" title="Favicon">
</head>

<body class="grey lighten-2">
    <!-- Navbar -->
    <nav class="nav-center">
        <div class="nav-wrapper grey darken-4">

            <!-- logo -->
            <a href="~/Application/home">
                <img class="col l1 offset-l10 m8 offset-m2 s12 brand-logo" src="~/img/logo.png" />
            </a>

            <!-- Mobile responsive menu -->
            <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>

            <!-- Dropdown -->
            <ul id='dropdown' class='dropdown-content'>
                <li><a href="~/Application/settings" style="font-size: 14px; padding: 12px 20px">Instellingen<i class="tiny material-icons">settings</i></a></li>
                <li><a href="~/Application/logout" style="font-size: 14px; padding: 12px 26px">Uitloggen<i class="tiny material-icons">power_settings_new</i></a></li>
            </ul>

            <ul class="hide-on-med-and-down">
                <li><a href="~/Application/Home">Agenda</a></li> <!-- Verwijzing naar agenda pagina-->
                <li><a href="~/Application/customers">Klanten</a></li> <!-- Verwijzing naar klantenpagina-->
                <li><a class='dropdown-button right' data-beloworigin="true" href='#' data-activates='dropdown'><i class="material-icons">more_vert</i></a></li>
                <li><a style="font-size: small;" class="right">Hallo, @WebSecurity.CurrentUserName !</a></li>
            </ul>
            <ul class="side-nav" *id="mobile-demo">
                <li><a href="~/Application/home" style="font-size: 14px; padding: 0px 60px">Agenda</a></li> <!-- Verwijzing naar agenda pagina-->
                <li><a href="~/Application/customers" style="font-size: 14px; padding: 0px 60px">Klanten</a></li> <!-- Verwijzing naar klantenpagina-->
                <li><div class="divider"></div></li>
                <li><a href="~/Application/settings" style="font-size: 14px"><i class="tiny material-icons">settings</i>Instellingen</a></li>
                <li><a href="~/Application/logout" style="font-size: 14px"><i class="tiny material-icons">power_settings_new</i>Uitloggen</a></li>
            </ul>
        </div>
    </nav>


    <div class="row" style="margin-bottom: 0px;">
        <div class="col s8 m8 l8">
			<a href="~/Application/rittentoevoegen.cshtml" class="waves-effect waves-light btn taximengeryellow left" style="margin: 80px 10px 0px;"><i class="material-icons right">control_point</i>Toevoegen</a>
            <a class="waves-effect waves-light btn taximengeryellow left" style="margin: 80px 10px 0px;"><i class="material-icons right">edit</i>Wijzigen</a>
            <a class="waves-effect waves-light btn taximengeryellow left" style="margin: 80px 10px 0px;"><i class="material-icons right">cancel</i>Annuleren</a>
            <a class="waves-effect waves-light btn taximengeryellow left" style="margin: 80px 10px 0px;"><i class="material-icons right">delete</i>Verwijderen</a>
        </div>
        <form>
            <a class="waves-effect waves-light btn taximengeryellow left" style="margin: 80px 64px 0px;"><i class="material-icons right">file_download</i>Exporteren</a>
            <div class="col s4 input-field right" style="width:300px;margin: 80px 10px 10px;">
                <label class="label-icon" for="search"><i class="material-icons right" style="z-index:-1;margin-left: 250px;">search</i></label>
                <input id="search" type="search" style="margin-bottom: 0px;" required>
            </div>
        </form>
    </div>


    <div class="row">
        <div class="col s12">
            <div class="card white">
                <div class="card-content black-text">
                    <span class="card-title">Klanten</span>
                    <table class="centered highlight responsive-table">
                        <thead>
                            <tr>
                                <th>Tijd</th>
                                <th>Ophaaladres</th>
                                <th>Bestemmingsadres</th>
                                <th>Klant</th>
                                <th>#</th>
                                <th>SW</th>
                                <th>Kenteken</th>
                                <th>Chauffeur</th>
                            </tr>
                        </thead>
                        @foreach (var item in gegevens)
                        {
                            <tbody>
                                <tr>
                                    <td>@item.Tijd</td>
                                    <td>@item.Ophaaladres</td>
                                    <td>@item.Bestemmingsadres</td>
                                    <td>@item.Klant</td>
                                    <td>@item.Personen</td>
                                    <td>@item.SW</td>
                                    <td>@item.Kenteken</td>
                                    <td>@item.Chauffeur</td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/js/materialize.min.js"></script>
    <script>
        $(".button-collapse").sideNav();
    </script>

</body>
</html>